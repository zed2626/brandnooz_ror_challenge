= form_for(@product) do |f|
  - if @product.errors.any?
    .error_explanation
      %h2
        = pluralize(@product.errors.count, 'error')
        prohibited this product from being saved:

      %ul
        - @product.errors.full_messages.each do |msg|
          %li
            = msg

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :price
    %br
    = f.text_field :price

  %p
    = f.submit

= link_to products_path do
  Back
