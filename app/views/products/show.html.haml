%h1
  Product details

%p
  %strong
    Name:
  = @product.name

%p
  %strong
    Price:
  = @product.price

- @product.product_tags.each_with_index do |product_tag, index|
  %p
    %strong
      Tag
      =succeed(':') do
        = index + 1
    = product_tag.name

= link_to products_path do
  Back
|
= link_to edit_product_path do
  Edit
|
= link_to product_path(@product), { method: :delete, data: { confirm: 'Are you sure?' } } do
  Destroy
